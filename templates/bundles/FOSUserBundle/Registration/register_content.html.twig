{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post',
    'action': path('fos_user_registration_register'),
    'attr': {'class': 'fos_user_registration_register'}})
}}
    <h1 class="h3 mb-3 font-weight-normal">{{ 'register_user'|trans({}, 'messages') }}</h1>

    {{ form_row(form.email) }}

    {{ form_row(form.username) }}

    {{ form_row(form.plainPassword) }}

    {{ form_row(form.termsAccepted) }}

    <div>
        <input type="submit" class="btn btn-primary" value="{{ 'register'|trans({}, 'messages') }}" />
    </div>

{{ form_end(form) }}
